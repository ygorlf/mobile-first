/*
	Varibles & Mixins:
*/
body-text = #B1B1B1;

highlighted-color = #F7CC4B

clear-fix()
  zoom 1
  &:after
  &:before
    content ""
    display table
  &:after
    clear both

rounded-image()
	-webkit-border-radius 50%
	-moz-border-radius 50%
	border-radius 50%

align-hack-vertical()
	position absolute
	top 50%
	-webkit-transform translate(0, -50%)
	transform translate(0, -50%)
	
align-hack-horizontal()
	position absolute
	left 50%
	-webkit-transform translate(-50%, 0)
	transform translate(-50%, 0)
	
align-hack-vertical-horizontal()
	position absolute
	top 50%
	left 50%
	-webkit-transform translate(-50%, -50%)
	transform translate(-50%, -50%)
	

/*
	Base Styles
*/

*
*:before
*:after
	box-sizing border-box

body	
	font 100%/1.5 "Open Sans Condensed", sans-serif
	
	@media(min-width: 768px)
		font 105%/1.5 "Open Sans Condensed", sans-serif

h1
h2
h3
	font-family "Roboto", sans-serif
	font-weight 200

h1
	font-size 3em
	line-height 1.25
	
	color white
	
h2
	margin 0 0 .25em
	text-align center
	font-size 2.4em
	line-height 1

h3
	margin .25em 0
	font-size 1.6em
	line-height 1

p
blockquote
	font-size 1.2em 
	line-height 1.5
	color body-text
	
blockquote
	color #222

ul
	list-style none
	
a
	text-decoration none
	color highlighted-color

img
video
	max-width 100%
	height auto
	
hr 
	border 1px solid #B1B1B1
	

.container
	width 100%
	max-width 1140px
	margin 0 auto
	padding 0 2.5%
	
	@media (min-width: 1140px)
		width 100%

.subheading
	margin 0
	text-align center
	font-size 1.2em
	font-weight 200
	
	color highlighted-color
	
.btn
	display block
	margin 1.5em auto
	max-width 150px
	text-align center
	
	color highlighted-color
	font-weight bold
	border 2px solid highlighted-color
	padding 0.25em 1em
		
	&:hover
		color white
		background highlighted-color
		
	@media (min-width: 768px)
		margin 0 auto 1.5em 0
		padding 0.25em 0.5em

/*
	Header
*/

#header
	position relative
	width 100%
	height 100vh

	background url('../media/hero-principles.jpg') center
	background-size cover

	.heading
		margin-top 0
		text-align center
		
		@media (min-width: 768px)
			position relative
			font-size 3.5em
			font-weight 200
			text-align center
		
		align-hack-vertical()
		
		span
			color highlighted-color
			
/*
	Navigation
*/

.mobile-nav
	display block
	position relative
	width 50px
	height 50px
	align-hack-vertical()
	right 2.5%
	left auto
	
	cursor pointer
	background highlighted-color
	border-radius 5px
	
	.fa
		align-hack-vertical-horizontal()
		color white
	
	@media (min-width: 768px)
		display none

#navigation
	position relative
	height 90px
	
	background rgba(0,0,0, 0.9)
	
	.logo
		margin-top 0
		align-hack-vertical()
		left 2.5%
		
	.menu
		width 90%
		display none
		align-hack-horizontal()
		top 100%
		margin 1em 0
		z-index 2
		padding 0		
		background #222
		
		li 
			margin 0
			padding 0
			
			&:hover
				background highlighted-color
		
		a
			display block
			width 100%
			height 100%
			padding 1em
			
			font-weight bold
			color white
			text-transform capitalize
	
		@media (min-width: 768px)
			width auto
			display inline
			margin 0
			align-hack-vertical()
			right 2.5%
			left auto
			
			background none
			
			li
				display inline-block
				margin 0 0.5em
				
				&:hover
					background none
			
			a 
				padding 0.5em
				
				&:hover
					color highlighted-color
			
/*
	About Section
*/

#about-us 
	padding 3em 0
	
	@media (min-width: 768px)
		padding 7em	0
		clear-fix()

	h2
		text-align left
	
	.subheading
		text-align left
		
	@media (min-width: 768px)
		.about 
			width 47.5%
			margin 0 1.25%
			float left
			text-align left
			
		.featured-img
			width 47.5%
			margin 0 1.25%
			float right
			
			border-radius 10px
			
/*
	Video Presentation Section
*/

#video-presentation
	padding 3em 0
	color white
	background highlighted-color
	
	.subheading
		color #222
		
	.intro
		display block
		margin 1.5em auto
		

/*
	Team Section
*/

#team 
	padding 3em 0
	
	@media (min-width: 768px)
		padding 7em 0
		clear-fix()
	
	.member
		margin 1.5em auto
		text-align center
		
		@media (min-width: 768px)
			width 47.5%
			margin 1.5em 1.25% 0 1.25%
			float left

		img
			rounded-image()
			
		.status
			color highlighted-color
			font-weight 700

/*
	Parallax Section
*/

#parallax 
	padding 7em 0
	
	@media (min-width: 768px)
		padding 15em 0
		background url('../media/about-parallax-filtered.jpg') center fixed
	
	background url('../media/about-parallax-filtered.jpg') center
	background-size cover
		
	h2
	p
		color white
		
	p
		margin 0.5em auto
		text-align center
		max-width 550px
		
	.subheading
		color highlighted-color
		
	.btn
		margin 1.5em auto
		
/*
	Principles Section
*/

#our-principles
	padding 3em 0
	
	h2
		margin 0.75em 0 0.25em
	
	@media (min-width: 768px)
		padding 7em 0
		clear-fix()

		.featured-img
			width 47.5%
			margin 0 1.25%
			float left
			
			border-radius 10px
			
		.principles
			width 47.5%
			margin 0 1.25%
			float right	
			
			h2
				margin 0 0 0.25em
			
			h2
			p
				text-align left
	
/*
	Gallery Section
*/

#gallery 
	padding 3em 0
	background highlighted-color
	
	@media (min-width: 768px)
		padding 6em 0
	
	h2
		color white
		
	.subheading
		margin 0 0 .25em
		color #222
		
	#owl-gallery .item
		margin 0.5em
	
	#owl-gallery .item img
		display block
		width 100%
		height auto
		
/*
	Achievments Section
*/

#achievments 
	padding 3em 0
	text-align center
	
	h3
		color highlighted-color
		font-size 3em
		font-weight 500
		
	.achievment .fa
		padding 10px  0
		color #222
		
	@media (min-width: 768px)
		.achievment
			width 22.5%
			margin 0.75em 1.25%
			float left

		#owl-quotes
			clear-fix()
/*
	Up to Date Section
*/

#up-to-date
	padding 3em 0
	background highlighted-color
	
	@media (min-width: 768px)
		padding 6em 0
	
	h2
		color white
	
	.subheading
		color #222
	
	form
		margin-top 3em
		
		@media (min-width: 768px)
			-webkit-display flex
			display flex
			justify-content center
		
		input[type="text"]
		input[type="email"]
		input[type="submit"]
			display block
			width 90%
			margin 0.5em auto
			padding 0.25em 0.25em
			
			color white
			font-size 1.4em
			font-weight 100
			border-radius 4px
			
			@media (min-width: 768px)
				width auto
				display inline
				margin 0 10px
			
		input[type="text"]
		input[type="email"]
			border 2px solid white
			background highlighted-color
			
		input[type="submit"]
			border none
			background #222
			
			&:hover
				background white
				color highlighted-color

/*
	Footer Section
*/
#footer 
	padding 3em 0
	background #222
	
	.social-links
		padding 0
		-webkit-display flex
		display flex
		justify-content center
	
	.social-links li
		display inline-block
		margin 0 5px
		
		a
			width 55px
			height 55px
			text-align center
			line-height 52px
			
			color white
			border 2px solid white
			border-radius 50%
			
			&:hover
				color highlighted-color
				border 2px solid highlighted-color
	
	p
		text-align center